[module/workspaces]
type = internal/xworkspaces
pin-workspaces = false
enable-click = true
enable-scroll = true
format-padding = 0
icon-0 = 1;1
icon-1 = 2;2
icon-2 = 3;3
icon-3 = 4;4
icon-4 = 5;5
icon-5 = 6;6
icon-6 = 7;7
icon-7 = 8;8
icon-8 = 9;9
icon-9 = 10;10

icon-default = 

format = <label-state>
label-active = %icon%
label-occupied = %icon%
label-urgent = %icon%
label-empty = %icon%

label-occupied-padding = 1
label-empty-padding = 1
label-urgent-padding = 1
label-active-padding = 1

label-active-foreground = ${colors.purple}
label-empty-foreground = ${colors.fg}
label-occupied-foreground = ${colors.fg}
label-urgent-foreground = ${colors.red}

; cpu percentage
[module/cpu]
type = internal/cpu

format = <label> <ramp-coreload>
label =  %percentage%%

ramp-coreload-spacing = 0
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

format-background = ${colors.bg1}
format-foreground = ${colors.fg}
format-padding = 1

; volume control
[module/alsa]
type = internal/alsa

format-volume = <ramp-volume> <label-volume>
format-volume-background = ${colors.bg1}
format-volume-foreground = ${colors.fg}
format-volume-padding = 1

label-volume = %percentage%%

format-muted-prefix = 
label-muted = " muted"
format-muted-background = ${colors.bg1}
format-muted-foreground = ${colors.fg}
format-muted-padding = 1

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-4 = 

; just the time
[module/time]
type = internal/date
interval = 1.0
time =  %H:%M

format = <label>
format-background = ${colors.bg2}
format-foreground = ${colors.fg}
format-padding = 1
label = %time%

